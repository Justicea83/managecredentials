@model Contact
@{
    ViewData["Title"] = "Detail";
}
@Html.Partial("_HeaderPartial")

<div class="container">
    <h3 class="text-center">Lead Detail</h3>
    <form>
        <div class="row">
            <div class="col-md-6 col-md-offset-3 total-data">
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Company"></label>
                    <input class="form-control" placeholder="Enter Title" readonly asp-for="@Model.Company" />
                    <span class="text-danger" asp-validation-for="@Model.Company"></span>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Email"></label>
                        <input class="form-control" readonly placeholder="Enter Email" asp-for="@Model.Email" />
                        <span class="text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Phone"></label>
                        <input class="form-control" readonly placeholder="Enter Phone" asp-for="@Model.Phone" />
                        <span class="text-danger" asp-validation-for="@Model.Phone"></span>
                    </div>
                </div>
                <div class="row">

                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Status"></label>
                        <input class="form-control" readonly placeholder="Enter Status" asp-for="@Model.Status" />
                        <span class="text-danger" asp-validation-for="@Model.Status"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" asp-for="@Model.Country"></label>
                        <input class="form-control" readonly asp-for="@Model.Country" />
                        <span class="text-danger" asp-validation-for="@Model.Country"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.Description"></label>
                    <textarea style="height: 15rem;" readonly class="form-control" placeholder="Enter Something" asp-for="@Model.Description"></textarea>
                    <span class="text-danger" asp-validation-for="@Model.Description"></span>
                </div>
                <a asp-controller="Home" asp-action="Dashboard" data-toggle="tooltip" title="Go Back" class="btn btn-primary pull-left">Back</a>
            </div>
        </div>
    </form>
</div>
