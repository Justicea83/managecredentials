@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="credentials_container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="text-center">Login</h3>
        </div>
        <form asp-controller="Home" asp-action="Login" method="post" asp-route-ReturnUrl="@ViewBag.ReturnUrl">
            <div class="panel-body">

                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <input asp-for="@Model.Email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password" class="control-label"></label>
                    <input asp-for="@Model.Password" class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label>
                        <input asp-for="@Model.Remember"> Remember me
                    </label>
                </div>
            </div>
            <div class="panel-footer clearfix">
                <button type="submit" class="btn btn-primary pull-right">Login</button>
                <a asp-action="Index" class="btn btn-primary pull-left" data-toggle="tooltip" title="Go Back"><span class="glyphicon glyphicon-fast-backward"></span></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

